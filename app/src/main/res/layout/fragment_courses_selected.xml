<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/continue_background">

    <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:constraint_referenced_ids="image_view, tv_yippe,
             tv_courses_saved ,space, btn_continue"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:flow_verticalGap="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yippee"
            android:layout_marginTop="146dp"
    />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_yippe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yippe!"
            android:textSize="24sp"
            android:textColor="@color/color_556_blue"
            android:layout_marginTop="6dp"/>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_courses_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your courses has been saved"
            android:textSize="14sp"
            android:textColor="@color/color_556_blue"
            android:fontFamily="@font/gilroy_regular"
            android:layout_marginTop="8dp"/>

    <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Continue"
            android:textColor="@color/color_223_blue"
            android:textSize="16sp"
            android:fontFamily="@font/averta_regular"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/color_fd8_orange"
            android:textAllCaps="false"
            android:layout_marginBottom="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>