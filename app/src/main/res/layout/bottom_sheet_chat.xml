<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottom_sheet">

        <View android:id="@+id/view"
              android:layout_width="37dp"
              android:layout_height="5dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:background="@drawable/ic_sheet_view"
              android:layout_marginTop="13dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_share_bg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_white_bg"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_send_purple"
                app:layout_constraintTop_toTopOf="@id/img_share_bg"
                app:layout_constraintStart_toStartOf="@id/img_share_bg"
                app:layout_constraintEnd_toEndOf="@id/img_share_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_share_bg"
        />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_share_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_share_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_share_bg"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@id/img_share_bg"
                android:text="Share Chat"
                android:textSize="14sp"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/color_556_blue"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_search_bg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_white_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/img_share_bg"
                app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="@id/img_search_bg"
                app:layout_constraintStart_toStartOf="@id/img_search_bg"
                app:layout_constraintEnd_toEndOf="@id/img_search_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_search_bg"
        />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_search_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_search_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_search_bg"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@id/img_search_bg"
                android:text="Search chat"
                android:textSize="14sp"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/color_556_blue"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_clear_bg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_white_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/img_search_bg"
                app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_notification"
                app:layout_constraintTop_toTopOf="@id/img_clear_bg"
                app:layout_constraintStart_toStartOf="@id/img_clear_bg"
                app:layout_constraintEnd_toEndOf="@id/img_clear_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_clear_bg"
        />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_clear_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_clear_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_clear_bg"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@id/img_clear_bg"
                android:text="Clear chat"
                android:textSize="14sp"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/color_556_blue"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_export_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_white_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/img_clear_bg"
                app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_export"
                app:layout_constraintTop_toTopOf="@id/img_export_chat"
                app:layout_constraintStart_toStartOf="@id/img_export_chat"
                app:layout_constraintEnd_toEndOf="@id/img_export_chat"
                app:layout_constraintBottom_toBottomOf="@id/img_export_chat"
        />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_export_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_export_chat"
                app:layout_constraintBottom_toBottomOf="@id/img_export_chat"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@id/img_export_chat"
                android:text="Export chat"
                android:textSize="14sp"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/color_556_blue"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_delete_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_sign_out_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/img_export_chat"
                app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintTop_toTopOf="@id/img_delete_chat"
                app:layout_constraintStart_toStartOf="@id/img_delete_chat"
                app:layout_constraintEnd_toEndOf="@id/img_delete_chat"
                app:layout_constraintBottom_toBottomOf="@id/img_delete_chat"
        />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_delete_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img_delete_chat"
                app:layout_constraintBottom_toBottomOf="@id/img_delete_chat"
                android:layout_marginStart="17dp"
                app:layout_constraintStart_toEndOf="@id/img_delete_chat"
                android:text="Delete chat"
                android:textSize="14sp"
                android:fontFamily="@font/gilroy_regular"
                android:textColor="@color/color_e27_pink"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
