<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_52e_blue"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="245dp"
            android:layout_height="245dp"
            android:background="@drawable/image_bg"
            android:layout_marginTop="86dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/imageView_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onboard_three"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:textColor="@color/color_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Continue as"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tutor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="128dp"
            android:text="@string/tutor"
            android:textColor="@color/color_fd8_orange"
            android:textSize="16sp"
            android:fontFamily="@font/averta_regular"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:strokeColor="@color/color_fd8_orange"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent "/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_student"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:text="Student"
            android:textColor="@color/color_223_blue"
            android:textSize="16sp"
            android:fontFamily="@font/averta_regular"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/color_fd8_orange"
            android:textAllCaps="false"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tutor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent "/>


</androidx.constraintlayout.widget.ConstraintLayout>