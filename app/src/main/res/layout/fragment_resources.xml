<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourcesFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resources_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_resources_heading" />

    <TextView
        android:id="@+id/tv_resources_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Resources"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/search_view_background"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search Resources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resources_heading" />

    <TextView
        android:id="@+id/tv_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Books"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="See all"
        android:textColor="@color/color_556_blue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_books"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollable_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_books">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/color_e27_pink"
                android:layout_height="200dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_height="200dp"/>

        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/tv_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Videos"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollable_books" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="See all"
        android:textColor="@color/color_556_blue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_videos"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollable_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_videos">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/color_e27_pink"
                android:layout_height="120dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_height="120dp"/>

        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/tv_podcasts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Podcasts"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollable_videos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="See all"
        android:textColor="@color/color_556_blue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_podcasts"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_podcasts">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/color_e27_pink"
                android:layout_height="120dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_height="120dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/color_fb4_orange"
                android:layout_height="120dp"/>

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>