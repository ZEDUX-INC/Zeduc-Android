<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                    android:type="linear"
                    android:angle="90"
                    android:startColor="#FFFFFF"
                    android:centerColor="#FFF3F3"
                    android:endColor="#ED5A78"/>
            <size android:width="50dp"
                  android:height="50dp"/>
        </shape>
    </item>

    <item
            android:top="3dp"
            android:bottom="3dp"
            android:start="3dp"
            android:end="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>